@model List<Talent_Hub.Models.Posiciones_Disponibles>

@{
    ViewBag.Title = "Buscar Posición Por Nombre";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #1465bb;
            color: white;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            header h1 {
                margin: 0;
            }

        .navbar {
            background-color: #003785;
            overflow: hidden;
        }

            .navbar a {
                float: left;
                display: block;
                color: white;
                text-align: center;
                padding: 14px 20px;
                text-decoration: none;
                font-size: 16px;
            }

                .navbar a:hover {
                    background-color: #1465bb;
                }

        .container {
            display: flex;
            justify-content: space-between;
            padding: 20px;
            gap: 20px;
            min-height: 80vh;
        }

        .form-container,
        .result-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-container {
            width: 35%;
        }

        .result-container {
            width: 60%;
        }

        h2 {
            color: #1465bb;
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
        }

            form div {
                margin-bottom: 10px;
            }

        label {
            font-weight: bold;
            color: #333;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

        input[type="submit"] {
            background-color: #1465bb;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
        }

            input[type="submit"]:hover {
                background-color: #003785;
            }

        .message {
            text-align: center;
            margin-top: 10px;
            font-size: 14px;
            color: #e74c3c;
        }

        .results-table {
            width: 100%;
            border-collapse: collapse;
        }

            .results-table th,
            .results-table td {
                padding: 10px;
                border: 1px solid #ddd;
                text-align: left;
            }

            .results-table th {
                background-color: #1465bb;
                color: white;
            }

            .results-table tr:nth-child(even) {
                background-color: #f9f9f9;
            }
    </style>
</head>
<body>

    <header>
        <h1>Talent Hub</h1>
    </header>

    <div class="navbar">
        <a href="@Url.Action("Index", "Home")">Inicio</a>
        <a href="@Url.Action("AgregarPosicion", "PosicionesDisponibles")">Agregar Posición</a>
    </div>

    <div class="container">
        <div class="form-container">
            <h2>Buscar Posición</h2>
            @using (Html.BeginForm("BuscarPorNombre", "PosicionesDisponibles", FormMethod.Get, new { @aria_label = "Formulario de búsqueda de posición" }))
            {
                <div>
                    @Html.Label("Nombre de la Posición", new { @aria_label = "Nombre de la Posición" })
                    @Html.TextBox("nombre", null, new { @placeholder = "Ingrese el nombre..." })
                </div>
                <input type="submit" value="Buscar" />
            }
        </div>

        <div class="result-container">
            <h2>Resultado de la Búsqueda</h2>
            @if (Model != null && Model.Count > 0)
            {
                <table class="results-table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Departamento</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var posicion in Model)
                        {
                            <tr>
                                <td>@posicion.Nombre_puesto</td>
                                <td>@posicion.Departamento</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else if (Model != null)
            {
                <p class="message">No se encontraron posiciones con ese nombre.</p>
            }
            else
            {
                <p class="message">Realice una búsqueda para ver resultados.</p>
            }
        </div>
    </div>

</body>
</html>
