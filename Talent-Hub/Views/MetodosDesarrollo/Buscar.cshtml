@{
    ViewBag.Title = "Buscar Metodo por Nombre";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7f9;
            color: #333;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #1465bb;
            color: #fff;
            padding: 15px 20px;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            header a {
                color: #fff;
                margin: 0 10px;
                text-decoration: none;
            }

                header a:hover {
                    text-decoration: underline;
                }

        h2 {
            color: #1465bb;
            text-align: center;
            margin-top: 20px;
        }

        .container {
            display: flex;
            justify-content: space-between;
            padding: 20px;
            margin-top: 30px;
        }

        .form-container {
            width: 45%;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .results-container {
            width: 45%;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            max-height: 400px;
            overflow-y: auto;
        }

        .form-container div {
            margin-bottom: 15px;
        }

        .form-container label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #333;
        }

        .form-container input[type="text"] {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .form-container button {
            width: 100%;
            padding: 10px;
            background-color: #1465bb;
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }

            .form-container button:hover {
                background-color: #003785;
            }

        .results-container ul {
            list-style-type: none;
            padding: 0;
        }

        .results-container li {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

            .results-container li:hover {
                background-color: #f1f1f1;
            }

        .no-results {
            color: #ff6b6b;
            text-align: center;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <header>
        <div>
            <span>Talent Hub</span>
            <div>
                <a href="/home">Inicio</a>
                <a href="@Url.Action("Actualizar", "MetodosDesarrollo")">Actualizar Métodos</a>
                <a href="@Url.Action("Agregar", "MetodosDesarrollo")">Agregar Método</a>
            </div>
        </div>
    </header>

    <h2>Buscar Método por Nombre</h2>

    <div class="container">
        <!-- Formulario -->
        <div class="form-container">
            @using (Html.BeginForm())
            {
                <div>
                    <label for="nombre">Nombre del Método:</label>
                    <input type="text" name="nombre" />
                </div>

                <button type="submit">Buscar</button>
            }
        </div>

        <!-- Resultados -->
        <div class="results-container">
            @if (ViewBag.Resultados != null && ((List<Talent_Hub.Models.Metodos_Desarrollo>)ViewBag.Resultados).Count > 0)
            {
                <ul>
                    @foreach (var item in (List<Talent_Hub.Models.Metodos_Desarrollo>)ViewBag.Resultados)
                    {
                        <li>
                            <strong>@item.Nombre_metodo</strong><br />
                            <em>@item.Descripcion</em><br />
                            <span><strong>Habilidades Desarrolladas:</strong> @item.Habilidades_desarrolla</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="no-results">No se encontraron resultados para el método buscado.</p>
            }
        </div>
    </div>

    <p>@ViewBag.Message</p>
</body>
</html>


