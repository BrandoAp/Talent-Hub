@model Talent_Hub.Models.Empleados_Metodos

@{
    ViewBag.Title = "Empleados con Métodos Completados";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        /* Global Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f7f9;
            color: #333;
        }
        header {
            background-color: #1465bb;
            color: #fff;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        header h1 {
            margin: 0;
            font-size: 20px;
        }
        header nav a {
            color: #fff;
            text-decoration: none;
            margin-left: 15px;
            font-size: 14px;
        }
        header nav a:hover {
            text-decoration: underline;
        }

        /* Content Styles */
        h2 {
            color: #1465bb;
            text-align: center;
            margin: 20px 0;
        }
        .container {
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        table thead {
            background-color: #1465bb;
            color: #fff;
        }
        table th, table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }
        table tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        table tr:hover {
            background-color: #f1f1f1;
        }
        .no-data {
            text-align: center;
            font-size: 16px;
            color: #ff6b6b;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Header Section -->
    <header>
        <h1>Talent Hub - Gestión de Métodos de Desarrollo</h1>
        <nav>
            <a href="@Url.Action("Index", "Home")">Inicio</a>
            <a href="@Url.Action("CompletarMetodo", "EmpleadosClient")">Completar Método</a>
            <a href="@Url.Action("AsignarMetodo", "EmpleadosClient")"> Asignar Método</a>
            <a href="@Url.Action("ObtenerConMetodosAsignados")">Método Asignados</a>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container">
        <h2>@ViewBag.Title</h2>

        @if (ViewBag.Empleados_Metodos != null && ((List<Talent_Hub.Models.Empleados_Metodos>)ViewBag.Empleados_Metodos).Count > 0)
        {
            <table>
                <thead>
                    <tr>
                        <th>Empleado</th>
                        <th>Correo</th>
                        <th>Posición Actual</th>
                        <th>Método Asignado</th>
                        <th>Descripción</th>
                        <th>Fecha Asignado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in (List<Talent_Hub.Models.Empleados_Metodos>)ViewBag.Empleados_Metodos)
                    {
                        <tr>
                            <td>@item.Nombre_empleado</td>
                            <td>@item.Email_empleado</td>
                            <td>@item.Posicion_actual</td>
                            <td>@item.Nombre_metodo</td>
                            <td>@item.Descripcion</td>
                            <td>@item.Fecha_asignado.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="no-data">No hay empleados con métodos completados.</p>
        }
    </div>
</body>
</html>
